@{
    ViewData["Title"] = "Service Request Routing";
    var distances = ViewBag.Distances as Dictionary<string, int>;
    var mst = ViewBag.MST as List<(string, string, int)>;
    var graph = ViewBag.Graph as Dictionary<string, List<(string, int)>>;
}

<div class="container mt-4">
    <h2 class="mb-3">Service Request Routing Network</h2>
    

    <div class="row">
        <!-- Shortest Paths  -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5><i class="bi bi-signpost-split"></i> Shortest Routes from Central Office</h5>
                    <small>Estimated travel times to each department</small>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Department</th>
                                <th>Distance (minutes)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var kvp in distances.OrderBy(x => x.Value))
                            {
                                <tr>
                                    <td>@kvp.Key</td>
                                    <td>
                                        @if (kvp.Value == int.MaxValue)
                                        {
                                            <span class="badge bg-secondary">Unreachable</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">@kvp.Value min</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Minimum Spanning Tree -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5><i class="bi bi-diagram-3"></i> Optimal Department Network</h5>
                    <small>Most efficient connection routes</small>
                </div>
                <div class="card-body">
                    <p><strong>Total optimal connections:</strong> @mst.Count</p>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>From</th>
                                <th>To</th>
                                <th>Distance</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var edge in mst)
                            {
                                <tr>
                                    <td>@edge.Item1</td>
                                    <td>@edge.Item2</td>
                                    <td><span class="badge bg-info">@edge.Item3 min</span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="alert alert-info mt-3">
                        <strong>Total Network Time:</strong> @mst.Sum(e => e.Item3) minutes
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Full Graph Visualization -->
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h5><i class="bi bi-diagram-2"></i> Complete Location Network</h5>
        </div>
        <div class="card-body">
            <div class="row">
                @foreach (var node in graph)
                {
                    <div class="col-md-4 mb-3">
                        <div class="card border-primary">
                            <div class="card-header bg-primary text-white">
                                <strong>@node.Key</strong>
                            </div>
                            <ul class="list-group list-group-flush">
                                @foreach (var connection in node.Value)
                                {
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span>→ @connection.Item1</span>
                                        <span class="badge bg-secondary">@connection.Item2 min</span>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Index")" class="btn btn-secondary">Back to Requests</a>
    </div>
</div>