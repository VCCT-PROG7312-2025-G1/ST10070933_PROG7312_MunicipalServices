@{
    ViewBag.Title = "Municipal Services Portal";
}

<div class="container mt-5">
    <!-- Header -->
    <div class="text-center mb-5">
        <img src="~/images/municipality_logo.png" alt="Municipality Logo" class="mb-3 municipality-logo" />
        <h1 class="fw-bold text-primary">Welcome to Your Local Municipality Portal</h1>
        <p class="small">Connecting you to your community — stay informed, report issues, and participate in local events.</p>
    </div>

    <!-- Main -->
    <div class="row text-center mb-5">
        <!-- Events -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <i class="bi bi-megaphone text-primary display-4"></i>
                    <h4 class="mt-3 fw-semibold">Local Events & Announcements</h4>
                    <p class="small">Stay up-to-date with what’s happening around your area.</p>
                    <a asp-controller="Events" asp-action="Index" class="btn btn-primary">
                        View Events
                    </a>
                </div>
            </div>
        </div>

        <!-- Report Issues -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <i class="bi bi-exclamation-triangle text-warning display-4"></i>
                    <h4 class="mt-3 fw-semibold">Report an Issue</h4>
                    <p class="small">Help us improve the community by reporting municipal issues quickly.</p>
                    <a asp-controller="Issues" asp-action="Create" class="btn btn-warning text-white">
                        Report Now
                    </a>
                </div>
            </div>
        </div>

        <!-- Service Requests -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <i class="bi bi-list-check text-success display-4"></i>
                    <h4 class="mt-3 fw-semibold">Service Request Status</h4>
                    <p class="small">Track your submitted service requests and check their progress.</p>
                    <a asp-controller="ServiceRequests" asp-action="Index" class="btn btn-success text-white">
                        View Status
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- About -->
    <div class="card shadow-sm border-0 mt-5">
        <div class="card-header bg-primary text-white fw-semibold">
            <i class="bi bi-info-circle"></i> About This Application
        </div>
        <div class="card-body">
            <p class="small">
                This portal was developed to enhance transparency and participation in local governance.
                Citizens can report issues, explore upcoming community events, and track service requests directly from the municipality.
            </p>
            <p class="small">
                Built using ASP.NET Core MVC, ensuring security, performance, and reliability.
            </p>
        </div>
    </div>
</div>