@model ST10070933_PROG7312_MunicipalServices.Models.Issue
@{
    ViewData["Title"] = "Report an Issue";
}
<h1>Report an Issue</h1>
<form asp-action="Create" asp-controller="Issues" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-label">Location</label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Category</label>
        <select asp-for="Category" class="form-select">
            <option>Sanitation</option>
            <option>Roads</option>
            <option>Utilities</option>
            <option>Other</option>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Description</label>
<textarea asp-for="Description" class="form-control" rows="4"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Attach a file (image or document)</label>
        <input type="file" name="attachment" class="form-control" />
    </div>
    <div class="mb-3">
        <button class="btn btn-success">Submit</button>
        <a class="btn btn-secondary" href="/">Back to Main Menu</a>
    </div>
</form>